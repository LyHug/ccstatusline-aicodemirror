{
  "name": "ccstatusline-aicodemirror",
  "version": "0.0.4",
  "description": "Unified status line formatter for Claude Code with complete aicodemirror integration - Smart credit tracking, auto-reset, browser login, and customizable display widgets based on ccstatusline",
  "module": "src/ccstatusline.ts",
  "type": "module",
  "bin": {
    "ccstatusline-aicodemirror": "dist/ccstatusline.js"
  },
  "files": [
    "dist/",
    "README.md",
    "README_zh.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun run src/ccstatusline.ts",
    "statusline": "bun run src/ccstatusline.ts",
    "build": "bun build src/ccstatusline.ts --target=node --outfile=dist/ccstatusline.js --target-version=14 --packages=external --define process.env.NODE_ENV=\\\"production\\\"",
    "build:dev": "bun build src/ccstatusline.ts --target=node --outfile=dist/ccstatusline.js --target-version=14 --packages=external",
    "postbuild": "bun run scripts/replace-version.ts",
    "example": "cat scripts/payload.example.json | bun start",
    "prepublishOnly": "bun run build",
    "lint": "bun tsc --noEmit; eslint . --config eslint.config.js --max-warnings=999999 --fix",
    "save-cookie": "bun run src/ccstatusline.ts --save-cookie",
    "credit-refresh": "bun run src/ccstatusline.ts --credit-refresh",
    "set-threshold": "bun run src/ccstatusline.ts --set-threshold",
    "show-threshold": "bun run src/ccstatusline.ts --show-threshold"
  },
  "keywords": [
    "claude-code",
    "status-line",
    "cli",
    "terminal",
    "powerline",
    "aicodemirror",
    "anthropic",
    "customizable"
  ],
  "author": {
    "name": "LyHug",
    "url": "https://github.com/LyHug"
  },
  "contributors": [
    {
      "name": "Matthew Breedlove",
      "url": "https://github.com/sirmalloc",
      "note": "Original ccstatusline author"
    },
    {
      "name": "LyHug",
      "url": "https://github.com/LyHug",
      "note": "Aicodemirror integration and enhancements"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LyHug/ccstatusline-aicodemirror.git"
  },
  "bugs": {
    "url": "https://github.com/LyHug/ccstatusline-aicodemirror/issues"
  },
  "homepage": "https://github.com/LyHug/ccstatusline-aicodemirror#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "chalk": "^5.5.0",
    "ink": "^6.2.0",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "pluralize": "^8.0.0",
    "react": "^19.0.0",
    "tinyglobby": "^0.2.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "main": "dist/ccstatusline.js"
}
